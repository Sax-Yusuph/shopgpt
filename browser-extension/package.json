{
  "name": "shopie-extension",
  "version": "0.0.1",
  "description": "Shop 10x faster with ai",
  "author": {
    "name": "sax-yusuph",
    "email": "yusuphs@sinapistech.com"
  },
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bedframe dev",
    "build": "pnpm extract:css && tsc && bedframe build",
    "bedframe:version": "bedframe version",
    "git:release": "gh release create $npm_package_name@$npm_package_version ./dist/*.zip --generate-notes",
    "bedframe:publish": "bedframe publish -b",
    "format": "prettier --write .",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:format": "pnpm format && pnpm lint",
    "test": "vitest run --coverage",
    "commit": "lint-staged && cz",
    "zip": "bedframe zip",
    "codemod": "bedframe codemod",
    "convert:safari": "xcrun safari-web-extension-converter dist/safari --project-location . --no-open --app-name $npm_package_name@$npm_package_version-safari-web-extension",
    "extract:reset-css": "tailwindcss -i ./src/styles/style.css -o ./src/styles/min/style.min.css -m",
    "extract:main-css": "tailwindcss -i ./src/styles/reset.css -o ./src/styles/min/reset.min.css -m",
    "extract:css": "pnpm extract:reset-css && pnpm extract:main-css"
  },
  "dependencies": {
    "@medusajs/icons": "^1.1.0",
    "@medusajs/ui": "^2.2.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-menubar": "^1.0.3",
    "@radix-ui/react-navigation-menu": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@supabase/supabase-js": "^2.38.0",
    "@xenova/transformers": "^2.6.2",
    "ai": "^2.2.15",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "common-tags": "^1.8.2",
    "copy-to-clipboard": "^3.3.3",
    "js-tiktoken": "^1.0.7",
    "lucide-react": "^0.271.0",
    "nanoid": "^5.0.1",
    "react": "^18.2.0",
    "react-chrome-extension-router": "^1.4.0",
    "react-dom": "^18.2.0",
    "react-frame-component": "^5.2.6",
    "react-icons": "^4.10.1",
    "react-intersection-observer": "^9.5.2",
    "react-markdown": "^9.0.0",
    "react-transition-group": "^4.4.5",
    "remark-gfm": "^4.0.0",
    "striptags": "^3.2.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "use-chrome-storage": "^1.2.2",
    "valtio": "^1.11.2"
  },
  "devDependencies": {
    "@bedframe/cli": "^0.0.70",
    "@bedframe/core": "^0.0.35",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@medusajs/ui-preset": "^1.0.2",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/chrome": "^0.0.244",
    "@types/common-tags": "^1.8.2",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-frame-component": "^4.1.3",
    "@types/react-transition-group": "^4.4.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-istanbul": "^0.34.3",
    "autoprefixer": "^10.4.15",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.29",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "unplugin-fonts": "^1.0.3",
    "vite": "^4.4.9",
    "vitest": "^0.34.3"
  },
  "eslintConfig": {
    "globals": {
      "JSX": true
    },
    "env": {
      "browser": true,
      "es2020": true,
      "webextensions": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react-hooks/recommended",
      "prettier"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": [
        "tsconfig.json",
        "tsconfig.node.json"
      ]
    },
    "plugins": [
      "react-refresh"
    ],
    "rules": {
      "react-refresh/only-export-components": "warn",
      "react/react-in-jsx-scope": "off",
      "space-before-function-paren": "off"
    },
    "ignorePatterns": [
      "dist",
      "node_modules",
      "coverage"
    ]
  },
  "lint-staged": {
    "*.{css,html,json,js}": [
      "prettier --write ."
    ],
    "*{js,jsx,ts,tsx}": "eslint . --fix"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
